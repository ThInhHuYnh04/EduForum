<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    app:flow_horizontalAlign="center"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:src="@drawable/eduforumlogo"
        android:layout_gravity="start"/>

    <ImageView
        android:id="@+id/sliderImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/welcome1"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"/>
    
    <TextView
        android:id="@+id/sliderTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="@string/screen1"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/sliderDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/desscreen1"
        android:textColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:layout_marginTop="5dp"/>
</LinearLayout>